= content_for :page_title do
  Dashboard

%h2 Earnings
.panel.panel-default
.panel-heading
  %h3
    = I18n.l(Date.today, format: :full_month)
    Stats
.panel-body
  .dataTable_wrapper
    %table#dataTables-example.table.table-striped.table-bordered.table-hover
      %thead
        %tr
          %th Name
          %th Facebook Posts Number
          %th Wordpress Posts Number
          %th Average Earnings Per Wordpress Post
          %th Earnings
      %tbody
        = render partial: "earnings_stats", collection: @users, as: :user, locals: {previous: false}

