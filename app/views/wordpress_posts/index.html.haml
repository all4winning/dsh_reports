= content_for :page_title do
  Wordpress Posts
%h3
  = I18n.l(Date.today, format: :full_month)
  Statistics
.row
  .col-sm-3
    %b Users:
    = current_user.current_wordpress_stats.users
  .col-sm-3
    %b Page views:
    = current_user.current_wordpress_stats.unique_page_views
  .col-sm-3
    %b Page views per user:
    = current_user.current_wordpress_stats.page_views_per_user
  .col-sm-3
    %b Average time on page:
    = current_user.current_wordpress_stats.average_time_on_page
    seconds
%br
%br

= render "form"

.panel.panel-default
  .panel-heading
    Wordpress Posts
  .panel-body
    .dataTable_wrapper
      %table#dataTables-example.table.table-striped.table-bordered.table-hover
        %thead
          %tr
            %th Title
            - if @current_user.admin?
              %th Author
            %th Date
            %th Users
            %th Page Views
            %th Page Views Per User
            %th Average Time On Page
            %th Facebook Posts
        %tbody
          = render partial: "wordpress_post", collection: @wordpress_posts, as: :wordpress_post
    = render partial: "shared/pagination", locals: {collection: @wordpress_posts}
